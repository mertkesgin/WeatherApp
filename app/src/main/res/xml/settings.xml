<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Weather Location">

        <ListPreference
            app:key="LOCATION"
            android:title="Location"
            android:summary="%s"
            android:defaultValue="London"
            android:entries="@array/locationEntries"
            android:entryValues="@array/locationValues"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="Units">

        <ListPreference
            android:key="WEATHER_UNIT"
            android:title="Unit System"
            android:summary="%s"
            android:defaultValue="METRIC"
            android:entries="@array/unitSystemEntries"
            android:entryValues="@array/unitSystemValues"/>

    </PreferenceCategory>
</PreferenceScreen>